---
import type { Language } from "../lib/i18n";
import { getTranslations } from "../lib/i18n";

interface Props {
    lang?: Language;
}

const { lang = "fr" } = Astro.props;
const t = getTranslations(lang);
const isRTL = lang === "ar";

const partners = [
    {
        name: "DGSN",
        nameAr: "المديرية العامة للأمن الوطني",
        logo: "/images/partners/dgsn.png",
        description: "Direction Générale de la Sûreté Nationale",
        descriptionAr: "المديرية العامة للأمن الوطني",
    },
    {
        name: "SONATRACH",
        nameAr: "سوناطراك",
        logo: "/images/partners/sonatrach.png",
        description:
            "Société Nationale pour la Recherche, la Production, le Transport, la Transformation et la Commercialisation des Hydrocarbures",
        descriptionAr: "الشركة الوطنية للمحروقات",
    },
    {
        name: "DOUANE",
        nameAr: "الجمارك الجزائرية",
        logo: "/images/partners/douane.png",
        description: "Direction Générale des Douanes Algériennes",
        descriptionAr: "المديرية العامة للجمارك الجزائرية",
    },
    {
        name: "Inter Partner Assistance",
        nameAr: "إنتر بارتنر أسيستانس",
        logo: "/images/partners/inter_partner.png",
        description: "Assistance & Services",
        descriptionAr: "المساعدة والخدمات",
    },
];
---

<section
    class="py-20 bg-gradient-to-b from-white via-light to-white relative overflow-hidden"
>
    <!-- Background Elements -->
    <div class="absolute inset-0 pointer-events-none">
        <div
            class="absolute top-0 left-1/4 w-72 h-72 bg-primary/5 rounded-full blur-3xl"
        >
        </div>
        <div
            class="absolute bottom-0 right-1/4 w-72 h-72 bg-accent/5 rounded-full blur-3xl"
        >
        </div>
    </div>

    <div class="container relative z-10">
        <!-- Section Header -->
        <div class="text-center mb-16">
            <span
                class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-accent/10 border border-accent/30 mb-6"
            >
                <svg
                    class="w-4 h-4 text-accent"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    viewBox="0 0 24 24"
                >
                    <path d="M3 21h18M3 10h18M3 7l9-4 9 4M4 10h16v11H4z"></path>
                </svg>
                <span
                    class={`text-sm font-semibold text-accent-dark ${isRTL ? "font-arabic" : ""}`}
                >
                    {lang === "ar" ? "شراكاتنا" : "Nos Partenaires"}
                </span>
            </span>

            <h2
                class={`text-4xl md:text-5xl font-bold mb-6 ${isRTL ? "font-arabic" : ""}`}
            >
                <span class="text-primary">
                    {lang === "ar" ? "الاتفاقيات" : "Convention"}
                </span>
            </h2>

            <p
                class={`text-lg text-gray-600 max-w-2xl mx-auto ${isRTL ? "font-arabic" : ""}`}
            >
                {
                    lang === "ar"
                        ? "نتعاون مع مؤسسات رائدة لتقديم أفضل الخدمات لمرضانا"
                        : "Nous collaborons avec des institutions de premier plan pour offrir les meilleurs services à nos patients"
                }
            </p>
        </div>

        <!-- Partners Grid -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
            {
                partners.map((partner) => (
                    <div class="partner-card group">
                        <div class="partner-logo-container">
                            <img
                                src={partner.logo}
                                alt={isRTL ? partner.nameAr : partner.name}
                                class="partner-logo"
                                loading="lazy"
                            />
                        </div>
                        <h3
                            class={`partner-name ${isRTL ? "font-arabic" : ""}`}
                        >
                            {isRTL ? partner.nameAr : partner.name}
                        </h3>
                        <p
                            class={`partner-description ${isRTL ? "font-arabic" : ""}`}
                        >
                            {isRTL
                                ? partner.descriptionAr
                                : partner.description}
                        </p>
                    </div>
                ))
            }
        </div>

        <!-- Convention CTA -->
        <div class="text-center mt-16">
            <div
                class="inline-flex flex-col sm:flex-row gap-4 items-center justify-center p-8 bg-white rounded-2xl shadow-xl border border-gray-100"
            >
                <div class={`text-left ${isRTL ? "text-right" : ""}`}>
                    <h3
                        class={`text-xl font-bold text-primary mb-2 ${isRTL ? "font-arabic" : ""}`}
                    >
                        {
                            lang === "ar"
                                ? "هل أنت مؤسسة؟"
                                : "Vous êtes une institution ?"
                        }
                    </h3>
                    <p class={`text-gray-600 ${isRTL ? "font-arabic" : ""}`}>
                        {
                            lang === "ar"
                                ? "اتصل بنا لإنشاء شراكة"
                                : "Contactez-nous pour établir un partenariat"
                        }
                    </p>
                </div>
                <a href="/contact" class="btn btn-primary px-8 py-4">
                    <svg
                        class="w-5 h-5"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        viewBox="0 0 24 24"
                    >
                        <path
                            d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"
                        ></path>
                    </svg>
                    <span class={isRTL ? "font-arabic" : ""}>
                        {lang === "ar" ? "تواصل معنا" : "Nous contacter"}
                    </span>
                </a>
            </div>
        </div>
    </div>
</section>

<style>
    .partner-card {
        background: white;
        border-radius: 1.5rem;
        padding: 2rem;
        text-align: center;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
        border: 1px solid rgba(0, 0, 0, 0.05);
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .partner-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 20px 40px rgba(212, 0, 109, 0.1);
        border-color: var(--color-primary);
    }

    .partner-logo-container {
        width: 100px;
        height: 100px;
        margin: 0 auto 1.5rem;
        background: var(--color-light);
        border-radius: 1rem;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 1rem;
        transition: all 0.3s ease;
    }

    .partner-card:hover .partner-logo-container {
        background: var(--color-gray-200);
        transform: scale(1.05);
    }

    .partner-logo {
        width: 100%;
        height: 100%;
        object-fit: contain;
        transition: all 0.3s ease;
    }

    .partner-card:hover .partner-logo {
        transform: scale(1.05);
    }

    .partner-name {
        font-size: 1.1rem;
        font-weight: 700;
        color: var(--color-primary);
        margin-bottom: 0.5rem;
    }

    .partner-description {
        font-size: 0.85rem;
        color: var(--color-gray-600);
        line-height: 1.5;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
</style>
