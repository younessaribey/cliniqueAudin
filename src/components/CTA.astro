---
import type { Language } from "../lib/i18n";
import { getTranslations } from "../lib/i18n";

interface Props {
    lang?: Language;
}

const { lang = "fr" } = Astro.props;
const t = getTranslations(lang);
---

<section class="section section-light" id="cta">
    <div class="container">
        <div
            class="bg-gradient-to-br from-primary via-primary-light to-accent rounded-3xl p-8 md:p-16 text-center relative overflow-hidden"
        >
            <!-- Background Pattern -->
            <div class="absolute inset-0 opacity-10">
                <div
                    class="absolute inset-0"
                    style="background-image: radial-gradient(circle, white 1px, transparent 1px); background-size: 40px 40px;"
                >
                </div>
            </div>

            <div class="relative z-10">
                <h2
                    class="text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-6"
                >
                    {t.cta.ready_title}
                </h2>
                <p class="text-white/80 max-w-2xl mx-auto mb-10 text-lg">
                    {t.cta.ready_description}
                </p>
                <div class="flex flex-col sm:flex-row gap-4 justify-center">
                    <a
                        href="/contact"
                        class="btn bg-white text-primary hover:bg-secondary hover:text-dark px-8 py-4 text-lg font-semibold shadow-xl"
                    >
                        <svg
                            class="w-5 h-5"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            viewBox="0 0 24 24"
                        >
                            <path
                                d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 0 0 2-2V7a2 2 0 0 0-2-2H5a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2z"
                            ></path>
                        </svg>
                        {t.cta.book_now}
                    </a>
                    <a
                        href="tel:+213560055803"
                        class="btn bg-transparent text-white border-2 border-white hover:bg-white hover:text-primary px-8 py-4 text-lg font-semibold"
                    >
                        <svg
                            class="w-5 h-5"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            viewBox="0 0 24 24"
                        >
                            <path
                                d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
                            ></path>
                        </svg>
                        {t.cta.call_us}
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
