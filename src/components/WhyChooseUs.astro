---
import type { Language } from "../lib/i18n";
import { getTranslations } from "../lib/i18n";

interface Props {
    lang?: Language;
}

const { lang = "fr" } = Astro.props;
const t = getTranslations(lang);

const features = [
    {
        key: "experience",
        icon: `<svg class="w-7 h-7" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
      <path d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
    </svg>`,
        color: "primary",
    },
    {
        key: "team",
        icon: `<svg class="w-7 h-7" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
      <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
      <circle cx="9" cy="7" r="4"></circle>
      <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
      <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
    </svg>`,
        color: "secondary",
    },
    {
        key: "technology",
        icon: `<svg class="w-7 h-7" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
      <path d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
    </svg>`,
        color: "accent",
    },
    {
        key: "ethics",
        icon: `<svg class="w-7 h-7" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
      <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
      <path d="M12 8v4"></path>
      <path d="M12 16h.01"></path>
    </svg>`,
        color: "primary",
    },
];

const colorClasses = {
    primary: {
        bg: "bg-primary/10",
        text: "text-primary",
        border: "border-primary/20",
    },
    secondary: {
        bg: "bg-secondary/10",
        text: "text-secondary-dark",
        border: "border-secondary/20",
    },
    accent: {
        bg: "bg-accent/10",
        text: "text-accent",
        border: "border-accent/20",
    },
};
---

<section class="section" id="why-us">
    <div class="container">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
            <!-- Left Content -->
            <div>
                <span
                    class="inline-block px-4 py-1.5 bg-secondary/10 text-secondary-dark text-sm font-semibold rounded-full mb-4"
                >
                    {lang === "ar" ? "لماذا نحن" : "Pourquoi nous"}
                </span>
                <h2 class="text-3xl md:text-4xl font-bold text-dark mb-6">
                    {t.whyUs.section_title}
                </h2>
                <p class="text-gray-600 mb-8 leading-relaxed text-lg">
                    {t.whyUs.section_subtitle}
                </p>

                <div class="space-y-6">
                    {
                        features.map((feature) => {
                            const featureData = t.whyUs[
                                feature.key as keyof typeof t.whyUs
                            ] as { title: string; description: string };
                            const colors =
                                colorClasses[
                                    feature.color as keyof typeof colorClasses
                                ];
                            return (
                                <div class="flex items-start gap-4 group">
                                    <div
                                        class={`w-14 h-14 ${colors.bg} rounded-xl flex items-center justify-center flex-shrink-0 ${colors.text} group-hover:scale-110 transition-transform`}
                                    >
                                        <Fragment set:html={feature.icon} />
                                    </div>
                                    <div>
                                        <h4 class="font-bold text-dark mb-1 text-lg">
                                            {featureData.title}
                                        </h4>
                                        <p class="text-gray-600 text-sm leading-relaxed">
                                            {featureData.description}
                                        </p>
                                    </div>
                                </div>
                            );
                        })
                    }
                </div>
            </div>

            <!-- Right - Visual Card -->
            <div class="relative">
                <div
                    class="aspect-square bg-gradient-to-br from-primary via-primary-light to-accent rounded-3xl p-8 flex items-center justify-center relative overflow-hidden"
                >
                    <!-- Background Pattern -->
                    <div class="absolute inset-0 opacity-10">
                        <div
                            class="absolute inset-0"
                            style="background-image: radial-gradient(circle, white 1px, transparent 1px); background-size: 30px 30px;"
                        >
                        </div>
                    </div>

                    <div class="text-white text-center relative z-10">
                        <!-- Logo/Icon -->
                        <div
                            class="w-32 h-32 mx-auto mb-8 bg-white/20 backdrop-blur-sm rounded-full flex items-center justify-center"
                        >
                            <svg
                                class="w-16 h-16"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="1.5"
                            >
                                <circle cx="12" cy="12" r="10"></circle>
                                <circle cx="12" cy="12" r="4"></circle>
                                <path d="M12 2v4M12 18v4M2 12h4M18 12h4"></path>
                            </svg>
                        </div>

                        <h3 class="text-3xl font-bold mb-2">
                            {lang === "ar" ? "عيادة أودان" : "Clinique Audin"}
                        </h3>
                        <p class="text-white/80 text-lg">
                            {
                                lang === "ar"
                                    ? "مركز المساعدة على الإنجاب"
                                    : "Centre PMA"
                            }
                        </p>
                    </div>
                </div>

                <!-- Floating Stats Card -->
                <div
                    class="absolute -top-6 -right-6 w-40 bg-white rounded-2xl shadow-2xl p-5 animate-float"
                >
                    <div class="text-center">
                        <div class="text-4xl font-bold gradient-text-gold mb-1">
                            20+
                        </div>
                        <div class="text-xs text-gray-500 font-medium">
                            {
                                lang === "ar"
                                    ? "سنة من الخبرة"
                                    : "Ans d'expérience"
                            }
                        </div>
                    </div>
                </div>

                <!-- Bottom Stats Card -->
                <div
                    class="absolute -bottom-6 -left-6 w-48 bg-white rounded-2xl shadow-2xl p-5 animate-float"
                    style="animation-delay: 0.5s"
                >
                    <div class="flex items-center gap-3">
                        <div
                            class="w-12 h-12 bg-accent/10 rounded-full flex items-center justify-center"
                        >
                            <svg
                                class="w-6 h-6 text-accent"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"
                                ></path>
                                <path d="M9 12l2 2 4-4"></path>
                            </svg>
                        </div>
                        <div>
                            <div class="text-xl font-bold text-dark">98%</div>
                            <div class="text-xs text-gray-500">
                                {lang === "ar" ? "رضا العملاء" : "Satisfaction"}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
