---
import type { Language } from "../lib/i18n";
import { getTranslations } from "../lib/i18n";

interface Props {
    lang?: Language;
}

const { lang = "fr" } = Astro.props;
const t = getTranslations(lang);
---

<footer class="bg-gray-900 text-white py-12">
    <div class="container">
        <div
            class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 mb-12"
        >
            <!-- Brand -->
            <div class="lg:col-span-1">
                <div class="flex items-center gap-3 mb-6">
                    <div
                        class="w-12 h-12 bg-gradient-to-br from-accent to-accent-light rounded-full flex items-center justify-center"
                    >
                        <svg
                            class="w-7 h-7 text-white"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                        >
                            <circle cx="12" cy="12" r="10"></circle>
                            <path d="M12 8v4l2 2"></path>
                        </svg>
                    </div>
                    <div>
                        <h3 class="text-xl font-bold">Clinique Audin</h3>
                        <p class="text-sm text-white/70">Centre PMA</p>
                    </div>
                </div>
                <p class="text-white/80 text-sm leading-relaxed mb-6">
                    {t.footer.description}
                </p>
                <!-- Social Links -->
                <div class="flex gap-3">
                    <a
                        href="https://www.facebook.com/audin.clinique"
                        target="_blank"
                        rel="noopener"
                        class="w-10 h-10 bg-white/10 rounded-full flex items-center justify-center hover:bg-accent hover:text-gray-900 transition-all"
                    >
                        <svg
                            class="w-5 h-5"
                            fill="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"
                            ></path>
                        </svg>
                    </a>
                    <a
                        href="https://instagram.com"
                        target="_blank"
                        rel="noopener"
                        class="w-10 h-10 bg-white/10 rounded-full flex items-center justify-center hover:bg-accent hover:text-gray-900 transition-all"
                    >
                        <svg
                            class="w-5 h-5"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            viewBox="0 0 24 24"
                        >
                            <rect
                                width="20"
                                height="20"
                                x="2"
                                y="2"
                                rx="5"
                                ry="5"></rect>
                            <path
                                d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"
                            ></path>
                            <line x1="17.5" x2="17.51" y1="6.5" y2="6.5"></line>
                        </svg>
                    </a>
                </div>
            </div>

            <!-- Quick Links -->
            <div>
                <h4 class="text-lg font-semibold mb-6 text-accent">
                    {t.footer.quick_links}
                </h4>
                <ul class="space-y-3">
                    <li>
                        <a
                            href="/"
                            class="text-white/80 hover:text-accent transition-colors text-sm"
                            >{t.nav.home}</a
                        >
                    </li>
                    <li>
                        <a
                            href="/services"
                            class="text-white/80 hover:text-accent transition-colors text-sm"
                            >{t.nav.services}</a
                        >
                    </li>
                    <li>
                        <a
                            href="/about"
                            class="text-white/80 hover:text-accent transition-colors text-sm"
                            >{t.nav.about}</a
                        >
                    </li>
                    <li>
                        <a
                            href="/contact"
                            class="text-white/80 hover:text-accent transition-colors text-sm"
                            >{t.nav.contact}</a
                        >
                    </li>
                </ul>
            </div>

            <!-- Services -->
            <div>
                <h4 class="text-lg font-semibold mb-6 text-accent">
                    {t.nav.services}
                </h4>
                <ul class="space-y-3">
                    <li>
                        <span class="text-white/80 text-sm"
                            >{t.services.fiv.title}</span
                        >
                    </li>
                    <li>
                        <span class="text-white/80 text-sm"
                            >{t.services.icsi.title}</span
                        >
                    </li>
                    <li>
                        <span class="text-white/80 text-sm"
                            >{t.services.insemination.title}</span
                        >
                    </li>
                    <li>
                        <span class="text-white/80 text-sm"
                            >{t.services.vitrification.title}</span
                        >
                    </li>
                </ul>
            </div>

            <!-- Contact Info -->
            <div>
                <h4 class="text-lg font-semibold mb-6 text-accent">
                    {t.footer.contact_info}
                </h4>
                <ul class="space-y-4">
                    <li class="flex items-start gap-3">
                        <svg
                            class="w-5 h-5 text-accent flex-shrink-0 mt-0.5"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            viewBox="0 0 24 24"
                        >
                            <path
                                d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"
                            ></path>
                            <circle cx="12" cy="10" r="3"></circle>
                        </svg>
                        <span class="text-white/80 text-sm"
                            >{t.contact.info.address}</span
                        >
                    </li>
                    <li class="flex items-start gap-3">
                        <svg
                            class="w-5 h-5 text-accent flex-shrink-0 mt-0.5"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            viewBox="0 0 24 24"
                        >
                            <path
                                d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
                            ></path>
                        </svg>
                        <div class="text-white/80 text-sm">
                            <a
                                href="tel:+213560055803"
                                class="hover:text-accent block"
                                >{t.contact.info.phone1}</a
                            >
                            <a
                                href="tel:+213670358323"
                                class="hover:text-accent block"
                                >{t.contact.info.phone2}</a
                            >
                        </div>
                    </li>
                    <li class="flex items-start gap-3">
                        <svg
                            class="w-5 h-5 text-accent flex-shrink-0 mt-0.5"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            viewBox="0 0 24 24"
                        >
                            <rect width="20" height="16" x="2" y="4" rx="2"
                            ></rect>
                            <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"
                            ></path>
                        </svg>
                        <a
                            href="mailto:contact@cliniqueaudin.com"
                            class="text-white/80 text-sm hover:text-accent"
                            >{t.contact.info.email}</a
                        >
                    </li>
                    <li class="flex items-start gap-3">
                        <svg
                            class="w-5 h-5 text-accent flex-shrink-0 mt-0.5"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            viewBox="0 0 24 24"
                        >
                            <circle cx="12" cy="12" r="10"></circle>
                            <polyline points="12 6 12 12 16 14"></polyline>
                        </svg>
                        <div class="text-white/80 text-sm">
                            <p class="font-medium">
                                {t.contact.info.hours_title}
                            </p>
                            <p>{t.contact.info.hours}</p>
                        </div>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Bottom Bar -->
        <div class="pt-8 border-t border-white/10">
            <div
                class="flex flex-col md:flex-row justify-between items-center gap-4"
            >
                <p class="text-white/60 text-sm">
                    {t.footer.copyright}
                </p>
                <p class="text-white/40 text-xs">Développé avec ❤️</p>
            </div>
        </div>
    </div>
</footer>
